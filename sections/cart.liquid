<section class="cart-wrap">

  <h1 class="cart-title">Your Cart</h1>

  {% if cart.item_count == 0 %}

    <p class="cart-empty">Your cart is empty.</p>
    <a href="/collections/all" class="cart-continue">Continue shopping</a>

  {% else %}

  <form action="/cart" method="post" novalidate>

    <div class="cart-items">

      {% for item in cart.items %}
        <div class="cart-item">

          <!-- IMAGE -->
          <div class="cart-image">
            <img
              src="{{ item.image | image_url: width: 600 }}"
              alt="{{ item.product.title }}"
              width="300"
              height="400"
            >
          </div>

          <!-- INFO -->
          <div class="cart-info">
            <div class="cart-product-title">
              {{ item.product.title }}
            </div>

            <div class="cart-price">
              {{ item.price | money }}
            </div>

            <!-- QUANTITY -->
            <input
              type="number"
              name="updates[]"
              value="{{ item.quantity }}"
              min="0"
              class="cart-qty"
            >

            <!-- REMOVE -->
            <a href="{{ item.url_to_remove }}" class="cart-remove">
              Remove
            </a>
          </div>

        </div>
      {% endfor %}

    </div>

    <!-- FOOTER -->
    <div class="cart-footer">
      <div class="cart-total">
        Total: {{ cart.total_price | money }}
      </div>

      <button type="submit" name="checkout" class="cart-checkout">
        Checkout
      </button>
    </div>

  </form>

  {% endif %}

</section>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap');

/* WRAP */
.cart-wrap {
  min-height: 100vh;
  background: #000;
  color: #fff;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  padding: 80px 60px;
  font-family: 'Inter', Helvetica, Arial, sans-serif;
}

/* TITLE */
.cart-title {
  font-size: clamp(2rem, 5vw, 4rem);
  font-weight: 400;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  margin-bottom: 60px;
}

/* EMPTY */
.cart-empty {
  opacity: 0.7;
  font-size: 1rem;
  letter-spacing: 0.08em;
}

.cart-continue {
  display: inline-block;
  margin-top: 24px;
  color: #fff;
  text-decoration: none;
  border-bottom: 1px solid rgba(255,255,255,0.4);
}

/* ITEMS */
.cart-items {
  display: flex;
  flex-direction: column;
  gap: 60px;
}

/* ITEM */
.cart-item {
  display: grid;
  grid-template-columns: 180px 1fr;
  gap: 40px;
  border-top: 1px solid rgba(255,255,255,0.15);
  padding-top: 40px;
}

/* IMAGE */
.cart-image {
  aspect-ratio: 3 / 4;
  overflow: hidden;
}

.cart-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(1);
}

/* INFO */
.cart-info {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.cart-product-title {
  font-size: 1rem;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

.cart-price {
  opacity: 0.7;
  font-size: 0.9rem;
}

/* QTY */
.cart-qty {
  width: 80px;
  background: transparent;
  border: 1px solid rgba(255,255,255,0.3);
  color: #fff;
  padding: 6px;
  font-family: inherit;
}

/* REMOVE */
.cart-remove {
  color: rgba(255,255,255,0.6);
  text-decoration: none;
  font-size: 0.8rem;
  letter-spacing: 0.1em;
}

.cart-remove:hover {
  opacity: 1;
}

/* FOOTER */
.cart-footer {
  margin-top: 80px;
  padding-top: 40px;
  border-top: 1px solid rgba(255,255,255,0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-total {
  font-size: 1rem;
  letter-spacing: 0.15em;
  text-transform: uppercase;
}

/* CHECKOUT */
.cart-checkout {
  background: #fff;
  color: #000;
  border: none;
  padding: 14px 32px;
  font-family: inherit;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  cursor: pointer;
}

.cart-checkout:hover {
  opacity: 0.85;
}

/* MOBILE */
@media (max-width: 768px) {
  .cart-wrap {
    padding: 60px 24px;
  }

  .cart-item {
    grid-template-columns: 1fr;
  }
}
</style>
