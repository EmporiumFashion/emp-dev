{% comment %}
  Minimal Luxury Footer – EMPORIUM
{% endcomment %}

<footer class="emp-footer">
  <div class="footer-inner">

    <!-- Left -->
    <div class="footer-left">
      <span class="footer-logo">E</span>
    </div>

    <!-- Center -->
    <div class="footer-center">
      <p>© {{ 'now' | date: '%Y' }} Emporium</p>
      <p class="footer-sub">Luxury × Streetwear</p>
    </div>

    <!-- Right -->
    <div class="footer-right">
      <a href="/collections/all">Shop</a>
      <a href="/pages/about">About</a>
      <a href="/policies/privacy-policy">Privacy</a>
    </div>

  </div>
</footer>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=UnifrakturMaguntia&display=swap');

.emp-footer {
  background: #000;
  color: #f5f5f2;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  border-top: 1px solid rgba(245,245,242,0.15);
}

.footer-inner {
  max-width: 1400px;
  margin: 0 auto;
  padding: 48px 24px;
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
}

/* Left */
.footer-logo {
  font-family: 'UnifrakturMaguntia', serif;
  font-size: 2.8rem;
  letter-spacing: 2px;
}

/* Center */
.footer-center {
  text-align: center;
  font-family: 'Inter', sans-serif;
  font-size: 0.85rem;
  opacity: 0.75;
}

.footer-sub {
  margin-top: 4px;
  font-weight: 300;
}

/* Right */
.footer-right {
  display: flex;
  justify-content: flex-end;
  gap: 28px;
}

.footer-right a {
  font-family: 'Inter', sans-serif;
  font-size: 0.8rem;
  letter-spacing: 1px;
  text-transform: uppercase;
  text-decoration: none;
  color: #f5f5f2;
  opacity: 0.7;
  transition: opacity 0.2s ease;
}

.footer-right a:hover {
  opacity: 1;
}

/* Mobile */
@media (max-width: 768px) {
  .footer-inner {
    grid-template-columns: 1fr;
    gap: 24px;
    text-align: center;
  }

  .footer-right {
    justify-content: center;
  }
}
</style>

{% schema %}
{
  "name": "Footer",
  "presets": [
    { "name": "Footer" }
  ]
}
{% endschema %}
