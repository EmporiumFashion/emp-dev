{% comment %}
  Homepage Products Section
{% endcomment %}

<section class="homepage-products">

  <!-- MARQUEE TITLE -->
  <div class="hp-marquee">
    <div class="hp-marquee-track">
      {% for i in (1..16) %}
        <span>PRODUCTS</span>
      {% endfor %}
    </div>
  </div>

  <!-- PRODUCTS GRID -->
  {% if section.settings.collection != blank %}
    {% assign featured_collection = collections[section.settings.collection] %}

    {% if featured_collection.products.size > 0 %}
      <div class="hp-grid">
        {% for product in featured_collection.products %}
          <a href="{{ product.url }}" class="hp-card">

            <div class="hp-image">
              <img
                src="{{ product.featured_image | image_url: width: 900 }}"
                alt="{{ product.title }}"
                loading="lazy"
                width="450"
                height="600"
              >
            </div>

            <div class="hp-meta">
              <span class="hp-title">{{ product.title }}</span>
              <span class="hp-price">{{ product.price | money }}</span>
            </div>

          </a>
        {% endfor %}
      </div>
    {% else %}
      <p class="hp-empty">No products found.</p>
    {% endif %}
  {% else %}
    <p class="hp-empty">Select a collection in the section settings.</p>
  {% endif %}

</section>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap');

/* WRAP */
.homepage-products {
  background: #000;
  color: #fff;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  min-height: 100vh;
  font-family: 'Inter', Helvetica, Arial, sans-serif;
}

/* MARQUEE */
.hp-marquee {
  border-top: 1px solid rgba(255,255,255,0.25);
  border-bottom: 1px solid rgba(255,255,255,0.25);
  overflow: hidden;
}

.hp-marquee-track {
  display: inline-flex;
  gap: 48px;
  padding: 20px 0;
  animation: hp-marquee 28s linear infinite;
}

.hp-marquee span {
  font-size: clamp(2.2rem, 6vw, 4.8rem);
  font-weight: 600;
  letter-spacing: 0.35em;
  text-transform: uppercase;
  opacity: 0.9;
}

@keyframes hp-marquee {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

/* GRID */
.hp-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 40px;
  padding: 80px 60px;
}

@media (max-width: 768px) {
  .hp-grid {
    padding: 60px 24px;
    gap: 28px;
  }
}

/* CARD */
.hp-card {
  display: flex;
  flex-direction: column;
  gap: 14px;
  text-decoration: none;
  color: inherit;
}

/* IMAGE â€” forced rectangle */
.hp-image {
  aspect-ratio: 3 / 4;
  overflow: hidden;
  background: #111;
}

.hp-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(1) contrast(1.05);
  transition: filter 0.4s ease, transform 0.4s ease;
}

.hp-card:hover img {
  filter: grayscale(0) contrast(1.15);
  transform: scale(1.03);
}

/* META */
.hp-meta {
  display: flex;
  justify-content: space-between;
  font-size: 0.85rem;
  letter-spacing: 0.08em;
  text-transform: uppercase;
}

.hp-title {
  opacity: 0.85;
}

.hp-price {
  opacity: 0.6;
}

/* EMPTY */
.hp-empty {
  padding: 80px;
  text-align: center;
  opacity: 0.6;
}
</style>

{% schema %}
{
  "name": "Homepage products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select collection"
    }
  ],
  "presets": [
    {
      "name": "Homepage products"
    }
  ]
}
{% endschema %}
