{% comment %}
  Homepage Products Section
{% endcomment %}

<section class="homepage-products">

  <!-- MARQUEE TITLE -->
  <div class="products-marquee">
    <div class="marquee-track">
      {% for i in (1..20) %}
        <span>PRODUCTS</span>
      {% endfor %}
    </div>
  </div>

  <!-- PRODUCTS GRID -->
  {% if section.settings.collection != blank %}
    {% assign home_collection = collections[section.settings.collection] %}

    {% if home_collection.products_count > 0 %}
      <div class="products-grid">
        {% for product in home_collection.products limit: section.settings.limit %}
          <a href="{{ product.url }}" class="product-card">

            <div class="product-image">
              <img
                src="{{ product.featured_image | image_url: width: 900 }}"
                alt="{{ product.title }}"
                loading="lazy"
                width="450"
                height="600"
              >
            </div>

            <div class="product-meta">
              <span class="product-title">{{ product.title }}</span>
              <span class="product-price">{{ product.price | money }}</span>
            </div>

          </a>
        {% endfor %}
      </div>
    {% else %}
      <p class="no-products">No products found in this collection.</p>
    {% endif %}
  {% else %}
    <p class="no-products">Select a collection in the section settings.</p>
  {% endif %}

</section>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap');

.homepage-products {
  background: #000;
  color: #fff;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  min-height: 100vh;
  font-family: 'Inter', Helvetica, Arial, sans-serif;
  overflow: hidden;
}

/* MARQUEE */
.products-marquee {
  border-top: 1px solid rgba(255,255,255,0.2);
  border-bottom: 1px solid rgba(255,255,255,0.2);
  overflow: hidden;
  white-space: nowrap;
}

.marquee-track {
  display: inline-flex;
  gap: 40px;
  padding: 20px 0;
  animation: marquee 28s linear infinite;
}

.marquee-track span {
  font-size: clamp(2.2rem, 6vw, 4.8rem);
  font-weight: 500;
  letter-spacing: 0.35em;
  text-transform: uppercase;
  opacity: 0.85;
}

@keyframes marquee {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

/* GRID */
.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 42px;
  padding: 80px 60px;
}

@media (max-width: 768px) {
  .products-grid {
    padding: 60px 24px;
    gap: 28px;
  }
}

/* PRODUCT CARD */
.product-card {
  text-decoration: none;
  color: inherit;
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.product-image {
  width: 100%;
  aspect-ratio: 3 / 4;
  overflow: hidden;
  background: #111;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(1) contrast(1.05);
  transition: filter 0.4s ease, transform 0.4s ease;
}

.product-card:hover img {
  filter: grayscale(0) contrast(1.1);
  transform: scale(1.04);
}

/* META */
.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.85rem;
  letter-spacing: 0.08em;
  text-transform: uppercase;
}

.product-title {
  opacity: 0.85;
}

.product-price {
  opacity: 0.6;
}

.no-products {
  padding: 60px;
  opacity: 0.6;
}
</style>

{% schema %}
{
  "name": "Homepage Products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select collection"
    },
    {
      "type": "range",
      "id": "limit",
      "label": "Products to show",
      "min": 2,
      "max": 20,
      "step": 1,
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Homepage Products"
    }
  ]
}
{% endschema %}
