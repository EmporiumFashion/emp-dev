<header class="site-header">
  <div class="header-inner">

    <!-- Left: Menu -->
    <nav class="header-left">
      <a href="/collections/all">Shop</a>
    </nav>

    <!-- Center: Logo -->
    <div class="header-logo">
      <a href="/">E</a>
    </div>

    <!-- Right: Cart -->
    <div class="header-right">
      <a href="/cart">Cart</a>
    </div>

  </div>
</header>

<style>
/* RESET LINK COLORS */
.site-header a {
  color: #f5f5f2;
  text-decoration: none;
}
.site-header a:visited {
  color: #f5f5f2;
}

/* HEADER WRAPPER */
.site-header {
  width: 100vw;
  margin-left: calc(50% - 50vw);
  background: #000;
  border-bottom: 1px solid rgba(255,255,255,0.15);
}

/* INNER GRID */
.header-inner {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  height: 72px;
  padding: 0 32px;
  font-family: Inter, Helvetica, Arial, sans-serif;
  letter-spacing: 1px;
  text-transform: uppercase;
  font-size: 12px;
}

/* LEFT / RIGHT */
.header-left {
  justify-self: start;
}

.header-right {
  justify-self: end;
}

/* LOGO */
.header-logo a {
  font-size: 28px;
  font-weight: 500;
  letter-spacing: 4px;
}

/* MOBILE */
@media (max-width: 768px) {
  .header-inner {
    padding: 0 16px;
  }

  .header-logo a {
    font-size: 24px;
  }
}
</style>

