{% comment %}
  Vintage Fullscreen Collection
{% endcomment %}

<section class="collection-wrap">

  <!-- MARQUEE TITLE -->
  <div class="collection-marquee">
    <div class="marquee-track">
      {% for i in (1..20) %}
        <span>PRODUCTS</span>
        <span class="marquee-e">E</span>
      {% endfor %}
    </div>
  </div>

  <!-- PRODUCTS GRID -->
  <div class="products-grid">
    {% for product in collection.products %}
      <div class="product-card">
        <div class="product-image">
          <img
            src="{{ product.featured_image | image_url: width: 900 }}"
            alt="{{ product.title }}"
            loading="lazy"
            width="450"
            height="600"
          >
        </div>

        <div class="product-meta">
          <div class="product-title">{{ product.title }}</div>
          <div class="product-price">
            {{ product.price | money }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

</section>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap');

/* RESET */
.collection-wrap {
  min-height: 100vh;
  background: #000;
  color: #fff;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  overflow: hidden;
  font-family: 'Inter', Helvetica, Arial, sans-serif;
}

/* MARQUEE */
.collection-marquee {
  border-top: 1px solid rgba(255,255,255,0.2);
  border-bottom: 1px solid rgba(255,255,255,0.2);
  overflow: hidden;
  white-space: nowrap;
}

.marquee-track {
  display: inline-flex;
  align-items: center;
  gap: 40px;
  padding: 18px 0;
  animation: marquee 25s linear infinite;
}

.marquee-track span {
  font-size: clamp(2rem, 6vw, 4.5rem);
  font-weight: 300;
  letter-spacing: 0.35em;
  text-transform: uppercase;
  opacity: 0.85;
}

.marquee-e {
  font-family: 'UnifrakturMaguntia', serif;
  letter-spacing: 0;
  font-size: 1.2em;
  opacity: 1;
}

@keyframes marquee {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

/* GRID */
.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 40px;
  padding: 80px 60px;
}

@media (max-width: 768px) {
  .products-grid {
    padding: 60px 24px;
    gap: 28px;
  }
}

/* PRODUCT CARD */
.product-card {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

/* FORCE RECTANGLE */
.product-image {
  width: 100%;
  aspect-ratio: 3 / 4;
  overflow: hidden;
  background: #111;
}

.product-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(1) contrast(1.05);
  transition: filter 0.4s ease, transform 0.4s ease;
}

.product-card:hover img {
  filter: grayscale(0) contrast(1.1);
  transform: scale(1.03);
}

/* META */
.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 0.85rem;
  letter-spacing: 0.08em;
  text-transform: uppercase;
}

.product-title {
  opacity: 0.85;
}

.product-price {
  opacity: 0.6;
}
</style>
