{% comment %}
  Vintage marquee-style collection
  - Infinite scrolling products
  - Inter font
  - Thin divider lines
  - Works with any collection (including Home Page)
{% endcomment %}

<section class="collection">
  <div class="collection-header">
    <h1 class="collection-title">
      {{ collection.title }}
    </h1>
  </div>

  {% if collection.products_count > 0 %}
    <div class="product-marquee">
      <div class="marquee-track">
        {% for product in collection.products %}
          <div class="product-item">
            <a href="{{ product.url }}">
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.title }}"
                width="600"
                height="800"
                loading="lazy"
              >
              <div class="product-meta">
                <span class="product-title">{{ product.title }}</span>
                <span class="divider"></span>
                <span class="product-price">{{ product.price | money }}</span>
              </div>
            </a>
          </div>
        {% endfor %}

        {%- comment -%} duplicate for seamless loop {%- endcomment -%}
        {% for product in collection.products %}
          <div class="product-item">
            <a href="{{ product.url }}">
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.title }}"
                width="600"
                height="800"
                loading="lazy"
              >
              <div class="product-meta">
                <span class="product-title">{{ product.title }}</span>
                <span class="divider"></span>
                <span class="product-price">{{ product.price | money }}</span>
              </div>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  {% else %}
    <p class="no-products">No products found.</p>
  {% endif %}
</section>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap');

.collection {
  background: #000;
  color: #f5f5f2;
  min-height: 100vh;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  overflow: hidden;
  font-family: 'Inter', sans-serif;
}

.collection-header {
  padding: 48px 24px 24px;
  text-align: center;
  border-bottom: 1px solid rgba(255,255,255,0.15);
}

.collection-title {
  font-size: clamp(2.2rem, 6vw, 4rem);
  font-weight: 400;
  letter-spacing: 2px;
  text-transform: uppercase;
}

/* marquee */
.product-marquee {
  position: relative;
  overflow: hidden;
  padding: 40px 0;
}

.marquee-track {
  display: flex;
  gap: 80px;
  animation: scroll 35s linear infinite;
  width: max-content;
}

@keyframes scroll {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

.product-item {
  flex: 0 0 auto;
  width: 260px;
}

.product-item a {
  text-decoration: none;
  color: inherit;
}

.product-item img {
  width: 100%;
  height: auto;
  display: block;
  filter: grayscale(1) contrast(1.05);
  transition: filter 0.4s ease;
}

.product-item:hover img {
  filter: grayscale(0);
}

.product-meta {
  margin-top: 14px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.product-title {
  font-size: 0.95rem;
  font-weight: 400;
  letter-spacing: 0.5px;
}

.divider {
  height: 1px;
  width: 100%;
  background: rgba(255,255,255,0.2);
}

.product-price {
  font-size: 0.85rem;
  opacity: 0.7;
}

/* no products */
.no-products {
  padding: 80px;
  text-align: center;
  opacity: 0.6;
}

/* mobile */
@media (max-width: 768px) {
  .marquee-track {
    gap: 40px;
    animation-duration: 45s;
  }

  .product-item {
    width: 200px;
  }
}
</style>
