{% layout none %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ collection.title }}</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      background: #000;
      color: #fff;
      font-family: 'Inter', sans-serif;
      overflow-x: hidden;
    }

    /* ===== FULL SCREEN WRAPPER ===== */
    .collection-wrap {
      min-height: 100vh;
      width: 100vw;
      margin-left: calc(50% - 50vw);
      padding-bottom: 80px;
    }

    /* ===== MARQUEE TITLE ===== */
    .title-marquee {
      position: relative;
      border-top: 1px solid rgba(255,255,255,0.3);
      border-bottom: 1px solid rgba(255,255,255,0.3);
      overflow: hidden;
      padding: 24px 0;
    }

    .marquee-track {
      display: flex;
      width: max-content;
      animation: marquee 30s linear infinite;
    }

    .marquee-track span {
      font-size: clamp(3rem, 10vw, 7rem);
      letter-spacing: 0.15em;
      font-weight: 400;
      padding-right: 80px;
      white-space: nowrap;
    }

    @keyframes marquee {
      from {
        transform: translateX(0);
      }
      to {
        transform: translateX(-50%);
      }
    }

    /* ===== PRODUCTS GRID ===== */
    .products {
      max-width: 1400px;
      margin: 80px auto 0;
      padding: 0 24px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 48px;
    }

    .product-card {
      text-align: center;
    }

    .product-card img {
      width: 100%;
      height: auto;
      border: 1px solid rgba(255,255,255,0.2);
      margin-bottom: 16px;
    }

    .product-title {
      font-size: 0.9rem;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      margin-bottom: 6px;
    }

    .product-price {
      font-size: 0.85rem;
      opacity: 0.7;
    }

    /* ===== EMPTY STATE ===== */
    .empty {
      text-align: center;
      margin-top: 120px;
      opacity: 0.6;
    }

    @media (max-width: 768px) {
      .products {
        gap: 36px;
      }
    }
  </style>
</head>

<body>

  <section class="collection-wrap">

    <!-- MARQUEE TITLE -->
    <div class="title-marquee">
      <div class="marquee-track">
        {% for i in (1..12) %}
          <span>PRODUCTS</span>
        {% endfor %}
      </div>
    </div>

    <!-- PRODUCTS -->
    {% if collection.products.size > 0 %}
      <div class="products">
        {% for product in collection.products %}
          <a href="{{ product.url }}" class="product-card">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.title }}"
                loading="lazy"
                width="600"
                height="800"
              >
            {% endif %}
            <div class="product-title">{{ product.title }}</div>
            <div class="product-price">{{ product.price | money }}</div>
          </a>
        {% endfor %}
      </div>
    {% else %}
      <div class="empty">No products found</div>
    {% endif %}

  </section>

</body>
</html>
