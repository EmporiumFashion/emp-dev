{% comment %}
  Vintage Collection Page
  - PRODUCTS title = infinite marquee
  - Clean grid products
  - Inter font
  - Thin divider lines
{% endcomment %}

<section class="collection-page">

  <!-- PRODUCTS MARQUEE TITLE -->
  <div class="products-marquee">
    <div class="marquee-track">
      <span>PRODUCTS</span>
      <span>PRODUCTS</span>
      <span>PRODUCTS</span>
      <span>PRODUCTS</span>
      <span>PRODUCTS</span>
    </div>
  </div>

  <!-- TOP DIVIDER -->
  <div class="divider"></div>

  {% if collection.products.size > 0 %}
    <div class="product-grid">
      {% for product in collection.products %}
        <a href="{{ product.url }}" class="product-card">
          <div class="product-image">
            <img
              src="{{ product.featured_image | image_url: width: 600 }}"
              alt="{{ product.title }}"
              width="600"
              height="800"
              loading="lazy"
            >
          </div>

          <div class="product-info">
            <h3>{{ product.title }}</h3>
            <span>{{ product.price | money }}</span>
          </div>
        </a>
      {% endfor %}
    </div>
  {% else %}
    <p class="empty">No products found.</p>
  {% endif %}

  <!-- BOTTOM DIVIDER -->
  <div class="divider"></div>

</section>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap');

.collection-page {
  background: #000;
  color: #fff;
  min-height: 100vh;
  padding: 0;
  font-family: 'Inter', sans-serif;
  overflow: hidden;
}

/* ===== PRODUCTS MARQUEE ===== */
.products-marquee {
  overflow: hidden;
  white-space: nowrap;
  border-bottom: 1px solid rgba(255,255,255,0.15);
}

.marquee-track {
  display: inline-flex;
  animation: marquee 18s linear infinite;
}

.marquee-track span {
  font-size: clamp(3rem, 8vw, 7rem);
  font-weight: 300;
  letter-spacing: 8px;
  padding-right: 80px;
}

@keyframes marquee {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

/* ===== DIVIDERS ===== */
.divider {
  height: 1px;
  width: 100%;
  background: rgba(255,255,255,0.15);
  margin: 40px 0;
}

/* ===== PRODUCT GRID ===== */
.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 40px;
  padding: 0 40px 60px;
}

.product-card {
  text-decoration: none;
  color: inherit;
}

.product-image {
  overflow: hidden;
}

.product-image img {
  width: 100%;
  display: block;
  filter: grayscale(1) contrast(1.05);
  transition: transform 0.5s ease, filter 0.5s ease;
}

.product-card:hover img {
  transform: scale(1.04);
  filter: grayscale(0);
}

.product-info {
  margin-top: 14px;
  display: flex;
  justify-content: space-between;
  font-size: 0.9rem;
  letter-spacing: 1px;
  opacity: 0.9;
}

/* EMPTY STATE */
.empty {
  text-align: center;
  opacity: 0.6;
  padding: 80px 0;
}

/* MOBILE */
@media (max-width: 768px) {
  .product-grid {
    padding: 0 20px 60px;
    gap: 28px;
  }

  .marquee-track span {
    padding-right: 50px;
  }
}
</style>
