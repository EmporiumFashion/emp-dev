{% comment %}
  Vintage / Minimal Collection Page
{% endcomment %}

<section class="collection-page">

  <!-- PRODUCTS MARQUEE -->
  <div class="products-marquee">
    <div class="marquee-track">
      {% for i in (1..12) %}
        <span>PRODUCTS</span>
      {% endfor %}
    </div>
  </div>

  <div class="products-wrapper">

    {% if collection.products.size == 0 %}
      <p class="no-products">No products found</p>
    {% endif %}

    <div class="products-grid">
      {% for product in collection.products %}
        <a href="{{ product.url }}" class="product-card">

          <div class="product-image">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 800 }}"
                alt="{{ product.title }}"
                loading="lazy"
                width="800"
                height="1100"
                class="primary-img"
              >
            {% endif %}

            {% if product.images.size > 1 %}
              <img
                src="{{ product.images[1] | image_url: width: 800 }}"
                alt=""
                loading="lazy"
                width="800"
                height="1100"
                class="hover-img"
              >
            {% endif %}
          </div>

          <div class="product-meta">
            <span class="product-title">{{ product.title }}</span>
            <span class="product-price">{{ product.price | money }}</span>
          </div>

        </a>
      {% endfor %}
    </div>

  </div>
</section>

<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap');

/* RESET */
.collection-page {
  background: #000;
  color: #fff;
  min-height: 100vh;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  overflow-x: hidden;
  font-family: Inter, Helvetica, Arial, sans-serif;
}

/* MARQUEE */
.products-marquee {
  width: 100%;
  overflow: hidden;
  border-bottom: 1px solid rgba(255,255,255,0.15);
}

.marquee-track {
  display: flex;
  gap: 80px;
  padding: 24px 0;
  animation: marquee 18s linear infinite;
}

.marquee-track span {
  font-size: clamp(2.5rem, 6vw, 5rem);
  font-weight: 800; /* ðŸ”¥ BOLD */
  letter-spacing: 4px;
  opacity: 0.9;
  white-space: nowrap;
}

@keyframes marquee {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

/* WRAPPER */
.products-wrapper {
  padding: 60px 40px;
}

/* GRID */
.products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 48px;
}

/* PRODUCT CARD */
.product-card {
  text-decoration: none;
  color: #fff;
}

/* IMAGE */
.product-image {
  position: relative;
  width: 100%;
  aspect-ratio: 4 / 5; /* ðŸ”¥ RECTANGLE */
  overflow: hidden;
  background: #111;
}

.product-image img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.4s ease, transform 0.6s ease;
}

.hover-img {
  opacity: 0;
}

.product-card:hover .hover-img {
  opacity: 1;
}

.product-card:hover .primary-img {
  opacity: 0;
}

/* META */
.product-meta {
  margin-top: 14px;
  display: flex;
  justify-content: space-between;
  font-size: 0.9rem;
  letter-spacing: 0.5px;
  opacity: 0.85;
}

.product-title {
  font-weight: 500;
}

.product-price {
  font-weight: 400;
}

/* EMPTY */
.no-products {
  text-align: center;
  opacity: 0.6;
  padding: 80px 0;
}

/* MOBILE */
@media (max-width: 768px) {
  .products-wrapper {
    padding: 40px 20px;
  }

  .marquee-track span {
    font-size: 2rem;
  }
}
</style>
