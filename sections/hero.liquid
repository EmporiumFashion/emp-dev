<section class="hero">
  <div class="hero-inner">
    <h1 class="hero-title">{{ section.settings.heading }}</h1>
    <p class="hero-sub">{{ section.settings.subheading }}</p>

    {% if section.settings.cta_label != blank %}
      <a href="{{ section.settings.cta_link }}" class="hero-cta">
        {{ section.settings.cta_label }}
      </a>
    {% endif %}
  </div>
</section>

<style>
.hero {
  min-height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
  color: #f5f5f2;
}

.hero-inner {
  text-align: center;
  padding: 24px;
}

.hero-title {
  font-size: clamp(2.8rem, 6vw, 4.5rem);
  letter-spacing: 6px;
  text-transform: lowercase;
}

.hero-sub {
  margin-top: 16px;
  margin-bottom: 32px;
  opacity: 0.75;
}

.hero-cta {
  display: inline-block;
  padding: 14px 36px;
  border: 1px solid #f5f5f2;
  color: #f5f5f2;
  text-decoration: none;
  letter-spacing: 2px;
  text-transform: uppercase;
}

.hero-cta:hover {
  background: #f5f5f2;
  color: #000;
}
</style>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "emporium"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Luxury meets streetwear"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
