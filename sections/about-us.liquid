<header class="site-header">
  <div class="header-inner">
    <div class="header-left">
      <a href="/" class="header-menu">Menu</a>
    </div>

    <div class="header-center">
      <a href="/" class="header-logo">E</a>
      <span class="header-tagline">“Lock In.”</span>
    </div>

    <div class="header-right">
      <a href="/cart" class="header-cart">
        Cart ({{ cart.item_count }})
      </a>
    </div>
  </div>
</header>

<style>
.site-header {
  width: 100%;
  background: #000;
  color: #f5f5f2;
  border-bottom: 1px solid rgba(255,255,255,0.15);
}

.header-inner {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  padding: 16px 24px;
}

.header-left,
.header-right {
  font-family: Inter, Helvetica, Arial, sans-serif;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.header-left {
  text-align: left;
}

.header-right {
  text-align: right;
}

.header-center {
  text-align: center;
  line-height: 1;
}

.header-logo {
  display: block;
  font-family: 'UnifrakturMaguntia', serif;
  font-size: 32px;
  letter-spacing: 4px;
  color: #f5f5f2;
  text-decoration: none;
}

.header-tagline {
  display: block;
  margin-top: 4px;
  font-family: Inter, Helvetica, Arial, sans-serif;
  font-size: 11px;
  letter-spacing: 2px;
  opacity: 0.75;
}

.header-menu,
.header-cart {
  color: #f5f5f2;
  text-decoration: none;
}

.header-menu:hover,
.header-cart:hover {
  opacity: 0.7;
}

/* Mobile */
@media (max-width: 768px) {
  .header-inner {
    grid-template-columns: auto 1fr auto;
  }

  .header-tagline {
    font-size: 10px;
  }
}
</style>

{% schema %}
{
  "name": "Header",
  "settings": [],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
