<section class="about-us">
  <div class="about-grid">

    <!-- Image side -->
    <div class="about-image-wrap">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 900 }}"
          alt="About us"
          width="900"
          height="1200"
        >
      {% endif %}
    </div>

    <!-- Divider -->
    <div class="about-divider"></div>


<div class="about-diagonal-marquee">
  <div class="about-diagonal-track">
    <span>Lock in.</span>
    <span>Lock in.</span>
    <span>Lock in.</span>
    <span>Lock in.</span>
    <span>Lock in.</span>
  </div>
</div>


    <!-- Text side -->
    <div class="about-text">
      <h2>About us</h2>
      <p>
        We started with a belief in <strong>discipline</strong>, <strong>focus</strong>,
        and the power of <strong>showing up daily</strong>. What began as an idea
        turned into a movement built on consistency, intent, and obsession with
        craft. This is more than clothing — it’s a mindset.
      </p>
    </div>

  </div>
</section>

<style>

/* diagonal marquee container */
.about-diagonal-marquee {
  position: absolute;
  inset: 0;
  overflow: hidden;
  pointer-events: none;
  z-index: 0;
}

/* diagonal scrolling text */
.about-diagonal-track {
  position: absolute;
  top: 50%;
  left: -20%;
  display: flex;
  gap: 80px;
  transform: rotate(-12deg) translateY(-50%);
  white-space: nowrap;
  animation: diagonalScroll 22s linear infinite;
}

/* text style — MATCHES HERO MARQUEE */
.about-diagonal-track span {
  font-family: Inter, Helvetica, Arial, sans-serif;
  font-size: clamp(3rem, 6vw, 6rem);
  font-weight: 500;
  color: rgba(255, 255, 255, 0.06);
  text-transform: uppercase;
  letter-spacing: 0.15em;
}

/* animation */
@keyframes diagonalScroll {
  from {
    transform: rotate(-12deg) translateX(0) translateY(-50%);
  }
  to {
    transform: rotate(-12deg) translateX(-50%) translateY(-50%);
  }
}


.about-us {
  background: #000;
  color: #fff;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  padding: 0;
}

.about-grid {
  display: grid;
  grid-template-columns: 1fr 1px 1fr;
  min-height: 80vh;
}

/* Divider */
.about-divider {
  background: rgba(255,255,255,0.15);
  width: 1px;
}

/* Image side */
.about-image-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
}

.about-image-wrap img {
  max-width: 70%;
  border: 10px solid #fff;
  transform: rotate(3.5deg);
  object-fit: cover;
}

/* Text side */
.about-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 80px;
  font-family: Inter, Helvetica, Arial, sans-serif;
}

.about-text h2 {
  font-size: 3rem;
  margin-bottom: 24px;
  font-weight: 500;
}

.about-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;       /* horizontal center */
  text-align: center;
  padding: 60px;
}
.about-text p {
  max-width: 420px;
  line-height: 1.6;
  opacity: 0.9;
}

.about-text strong {
  font-weight: 600;
}

@media (max-width: 768px) {
  .about-inner {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .about-image-wrap {
    display: flex;
    justify-content: center;
  }
}
</style>

{% schema %}
{
  "name": "About us",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "About image"
    }
  ],
  "presets": [
    {
      "name": "About us"
    }
  ]
}
{% endschema %}
