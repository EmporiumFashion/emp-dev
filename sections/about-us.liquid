<section class="about-us">
  <div class="about-inner">

    <!-- LEFT : IMAGE -->
    <div class="about-image">
      <div class="image-frame">
        <img
          src="{{ 'about.jpg' | asset_url }}"
          alt="About us"
          width="600"
          height="800"
        >
      </div>
    </div>

    <!-- DIVIDER -->
    <div class="about-divider"></div>

    <!-- RIGHT : TEXT -->
    <div class="about-text">
      <h2>About us</h2>
      <p>
        We started with a simple belief â€” <strong>focus creates culture</strong>.
        What began as late nights and obsessive attention to detail slowly evolved
        into a brand built on <strong>discipline</strong>, <strong>craft</strong>,
        and the idea of staying locked in when others drift away.
      </p>
    </div>

  </div>
</section>

<style>
.about-us {
  background: #000;
  color: #fff;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  overflow: hidden;
}

.about-inner {
  display: grid;
  grid-template-columns: 1fr 1px 1fr;
  min-height: 90vh;
}

/* divider */
.about-divider {
  background: rgba(255,255,255,0.15);
  width: 1px;
}

/* image side */
.about-image {
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-frame {
  border: 10px solid #fff;
  transform: rotate(3.5deg);
  max-width: 60%;
}

.image-frame img {
  display: block;
  width: 100%;
  height: auto;
}

/* text side */
.about-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 8vw;
  font-family: Inter, Helvetica, Arial, sans-serif;
}

.about-text h2 {
  font-size: clamp(2.5rem, 4vw, 4rem);
  margin-bottom: 2rem;
  font-weight: 500;
}

.about-text p {
  max-width: 520px;
  font-size: 1rem;
  line-height: 1.8;
  opacity: 0.9;
}

.about-text strong {
  font-weight: 600;
}

/* mobile */
@media (max-width: 900px) {
  .about-inner {
    grid-template-columns: 1fr;
  }

  .about-divider {
    display: none;
  }

  .image-frame {
    transform: rotate(2deg);
    max-width: 80%;
  }

  .about-text {
    padding: 12vw 8vw;
  }
}
</style>

{% schema %}
{
  "name": "About us",
  "presets": [
    {
      "name": "About us"
    }
  ]
}
{% endschema %}
