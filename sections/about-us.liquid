<section class="about">
  <div class="about-grid">

    <!-- IMAGE SIDE -->
    <div class="about-image">
      {% if section.settings.image %}
        <div class="image-frame">
          <img
            src="{{ section.settings.image | image_url: width: 900 }}"
            alt="About image"
            width="900"
            height="1200"
            loading="lazy"
          >
        </div>
      {% endif %}
    </div>

    <!-- DIVIDER -->
    <div class="about-divider"></div>

    <!-- TEXT SIDE -->
    <div class="about-text">
      <h2>About us</h2>
      <p>
        We started with a belief in <strong>discipline</strong>, obsession with
        <strong>craft</strong>, and a refusal to follow trends. What began as an
        idea became <strong>emporium</strong> â€” a space where luxury and
        streetwear <strong>lock in</strong> together.
      </p>
    </div>
  </div>

  <!-- DIAGONAL MARQUEE -->
  <div class="about-marquee">
    <div class="about-marquee-track">
      <span>LOCK IN.</span><span>LOCK IN.</span><span>LOCK IN.</span>
      <span>LOCK IN.</span><span>LOCK IN.</span>
    </div>
  </div>
</section>

<style>
.about {
  background: #000;
  color: #fff;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  position: relative;
  overflow: hidden;
}

.about-grid {
  display: grid;
  grid-template-columns: 1fr 1px 1fr;
  min-height: 90vh;
}

/* IMAGE */
.about-image {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.image-frame {
  border: 10px solid #fff;
  transform: rotate(3deg);
  position: relative;
  overflow: hidden;
}

.image-frame img {
  display: block;
  width: 100%;
  height: auto;
  filter: grayscale(1) contrast(1.1);
  transition: filter 0.4s ease;
}

/* DIVIDER */
.about-divider {
  background: rgba(255,255,255,0.25);
}

/* TEXT */
.about-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 10vw;
  font-family: Inter, Helvetica, Arial, sans-serif;
}

.about-text h2 {
  font-size: clamp(2.5rem, 5vw, 4rem);
  margin-bottom: 20px;
}

.about-text p {
  max-width: 480px;
  line-height: 1.6;
  opacity: 0.85;
}

/* MARQUEE */
.about-marquee {
  position: absolute;
  inset: 0;
  pointer-events: none;
  z-index: 5;
  overflow: hidden;
}

.about-marquee-track {
  position: absolute;
  top: 50%;
  left: -50%;
  display: flex;
  gap: 80px;
  transform: rotate(-12deg);
  animation: marquee 18s linear infinite;
  font-family: Inter, Helvetica, Arial, sans-serif;
  font-size: clamp(3rem, 8vw, 7rem);
  letter-spacing: 0.2em;
  white-space: nowrap;
  mix-blend-mode: difference;
}

.about-marquee span {
  color: #fff;
}

/* COLOR REVEAL WHERE MARQUEE PASSES */
.about-marquee-track:hover ~ .about-grid .image-frame img {
  filter: grayscale(0) contrast(1.1);
}

@keyframes marquee {
  from { transform: translateX(0) rotate(-12deg); }
  to { transform: translateX(50%) rotate(-12deg); }
}

/* MOBILE */
@media (max-width: 768px) {
  .about-grid {
    grid-template-columns: 1fr;
  }

  .about-divider {
    display: none;
  }

  .about-marquee {
    display: none;
  }

  .image-frame {
    transform: rotate(2deg);
  }
}
</style>

{% schema %}
{
  "name": "About us",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "About image"
    }
  ],
  "presets": [
    {
      "name": "About us"
    }
  ]
}
{% endschema %}
